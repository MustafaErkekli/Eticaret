@model IEnumerable<ProductImage>

@{
    ViewData["Title"] = "Ürün Resimleri";
}

<p class="mt-2">
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i>Yeni Ekle</a>
</p>
<table id="example" class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.Name))
                    {
                        <a href="/Img/Products/@item.Name">
                            <img src="/Img/Products/@item.Name" height="60" width="80" style="border-radius: 5px;" />
                        </a>

                    }
                    else
                    {
                        <img src="/Img/no-img.png" height="60" width="80" style="border-radius: 5px;" />
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i>Düzenle</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i>Detay</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i>Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
