@model Eticaret.Core.Entities.Address

@{
    ViewData["Title"] = "Adres Sil";
}



<div class="container">
    <div class="form-container">
        <h3>Adres Silinecek Onaylıyor musunuz?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.District)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.District)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OpenAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OpenAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsBillingAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsBillingAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsDeliveryAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDeliveryAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a class="btn btn-outline-success mr-2" asp-action="Index">Listeye Dön</a>
        </form>
    </div>
</div>

<style>
    .container {
        display: flex;
        justify-content: center; /* Yatayda ortalar */
        align-items: flex-start; /* Yukarı doğru hizalar */
        min-height: 80vh; /* Sayfanın yüksekliğine göre hizalar, %100 yerine %80 yaptık */
        padding-top: 40px; /* Yukarıdan biraz boşluk bırak */
    }

    .form-container {
        width: 60%; /* Form genişliğini %60 yaparak biraz büyüttüm */
        background-color: #f9f9f9; /* Arka plan rengi */
        padding: 30px; /* İç boşluğu artırdım */
        border-radius: 8px; /* Kenar yumuşatma */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1); /* Gölgelendirmeyi artırdım */
        font-size: 1.1rem; /* Yazı boyutunu artırdım */
    }

    media (max-width: 768px) {
        .form-container

    {
        width: 90%; /* Mobil cihazlarda genişlik %90 */
    }

    }
</style>