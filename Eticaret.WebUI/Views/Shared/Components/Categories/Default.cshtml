@model IEnumerable<Category>
@{
    foreach (var maincategori in Model.Where(x=>x.IsActive&&x.IsTopMenu&&x.ParentId==0))
    {
        <div class="dropdown">
            <a class="dropdown-toggle nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @maincategori.Name
            </a>

            <ul class="dropdown-menu">
                @foreach (var subcategory in Model.Where(x => x.IsActive && x.IsTopMenu && x.ParentId == maincategori.Id))
                {
                    <li><a class="dropdown-item" href="/Categories/Index/@subcategory.Id">@subcategory.Name</a></li>
                }
            </ul>
        </div>
    }
}
